<!DOCTYPE html>
<html>
    <head>
        <%- include("head.ejs") %>
        <link rel="stylesheet" type="text/css" href="css/menu.css" />
        <link rel="stylesheet" type="text/css" href="css/auth.css" />
        <script type="text/javascript" src="js/auth.js"></script>
    </head>
<body>
    <div class="menu">
        <div class="leftmenu">
            <img src="/img/logo.jpg" class="logo">
        </div>
        <div class="rightmenu">
            <ul>
                <li><a href="/">Домашняя страница</a></li>
                <li id="highlight"><a href="/route">Построить маршрут</a></li>
                <li><a href="/login">Авторизация</a></li>
                <li><a href="/registration">Регистрация</a></li>
            </ul>
        </div>
    </div>
    <div class="container">
        <h3 id="form-title">Регистрация</h3>
        <form action="javascript:pushReg()" method="POST" id="reg-form">
          <div class="form-group">
              <label>Имя</label>
              <input type="text" class="form-control" placeholder="Имя" name="firstName" id="firstName">
          </div>
          <div class="form-group">
              <label>Фамилия</label>
              <input type="text" class="form-control" placeholder="Фамилия" name="lastName" id="lastName">
          </div>
          <div class="form-group">
              <label>Логин</label>
              <input type="text" class="form-control" placeholder="Логин" name="userName" id="userName">
          </div>
          <div class="form-group">
              <label>Пароль</label>
              <input type="password" class="form-control" placeholder="Пароль" name="password" id="password">
            </div>
          <div class="button">
            <button type="submit" class="btn">Зарегистрироваться</button>
          </div>
          <div class="error-text">
            <br>
          </div>
        </form>
      </div>
</body>
<footer>
    <%- include("footer.ejs") %>
</footer>
</html>